@article{ WOS:000561427800056,
Author = {Grimes, David Robert and Brennan, Laura J. and O'Connor, Robert},
Title = {{Establishing a taxonomy of potential hazards associated with
   communicating medical science in the age of disinformation}},
Journal = {{BMJ OPEN}},
