@article{ WOS:000727963400009,
Author = {Sunter, Daniel},
Title = {{THERE IS NO EASY SOLUTION TO THE WESTERN BALKANS' DISINFORMATION
   CHALLENGE}},
Journal = {{TURKISH POLICY QUARTERLY}},
Year = {{2021}},
Volume = {{20}},
Number = {{2}},
Pages = {{85-91}},
Month = {{SUM}},
Abstract = {{The Western Balkan countries are currently among the most vulnerable to
   an intentional, Kremlin-supported campaign of disinformation within the
   European region. The vulnerability of the Western Balkans is exacerbated
   for several reasons: the countries are not completely integrated into
   European and Euro-Atlantic structures; they harbor the legacy of ethnic
