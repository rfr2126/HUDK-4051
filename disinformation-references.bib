@article{ WOS:000696582900004,
Author = {Ristow, Colby},
Title = {{Sex, Money, and Murder on the Isthmus: Rumor, Disinformation, and the
   Politics of Denunciation in Revolutionary Mexico}},
Journal = {{JOURNAL OF SOCIAL HISTORY}},
Year = {{2021}},
